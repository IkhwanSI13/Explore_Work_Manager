<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/btn_one_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="One Work" />

    <Button
            android:id="@+id/btn_more_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="More Than One Work" />

    <Button
            android:id="@+id/btn_work_network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Worker with network require" />

    <Button
            android:id="@+id/btn_periodic_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Periodic Worker" />

    <Button
            android:id="@+id/btn_periodic_work_initial_delay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Periodic Worker with Initial Delay" />

</LinearLayout>